<h1>つぶやき一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>つぶやきの中身</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '詳細確認', post_path(post.id) %></td>
    <td><%= link_to "つぶやき編集", edit_post_path(post.id) %></td>
    <td><%= link_to 'つぶやき削除？', post_path(post.id), method: :delete,data: { confirm: '本当に宜しいでしょうか？' }  %></td>
  </tr>
<% end %>
</table>

<%= link_to 'つぶやき投稿へ', new_post_path %>