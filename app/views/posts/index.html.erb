<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
    <td><%= link_to "つぶやきを編集する", edit_post_path(post.id) %></td>
    <td><%= link_to 'つぶやき削除しますか？', post_path(post.id), method: :delete,data: { confirm: '本当に宜しいでしょうか？' }  %></td>
  </tr>
<% end %>
</table>

<%= link_to 'つぶやき投稿へ', new_post_path %>